<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_width="120dp"
        android:layout_height="106dp"
        android:background="@drawable/bg_card"
        android:layout_marginTop="45dp"
        app:layout_constraintTop_toTopOf="@id/teamBadged"
        app:layout_constraintStart_toStartOf="@id/teamBadged"
        app:layout_constraintEnd_toEndOf="@id/teamBadged"/>

    <ImageView
        android:id="@+id/teamBadged"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:srcCompat="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/teamName"
        style="@style/TeamNameSmallSemiBold"
        tools:text="Real Madrid"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/teamBadged"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>