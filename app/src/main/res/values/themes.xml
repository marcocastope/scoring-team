<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScoringTeam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryDarkColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TitleInfo">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TeamName">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TeamNameSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TeamNameSemiBoldLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TeamNameSemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TeamNameSmallSemiBold">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TitleMain">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_semi_bold_italic</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_margin">24dp</item>
    </style>

</resources>